{{>header}}
<h3 id="error">{{error}}</h3>
<form action="/editTourType" method = "post">
	<fieldset>
		<legend>Edit Tour Type</legend>
		<ul style="list-style-type: none;">
			<li>
				<label>Name:<span class="manditoryField">*</span> </label>
				<input type="text" name="label" id="label" value='{{label}}'>
			</li>
			<li>
				<label>Meet Time<span class="manditoryField">*</span></label>
				<input type="time" id="meet_time" name="meet_time" value = {{meet_time}}>
			</li>
			<li>
				<label>Cost:<span class="manditoryField">*</span> </label>
				<input type="text" name="cost" id="cost" value= {{cost}}>
			</li>
			<li>
				<input type="hidden" name="id" id="id" value={{id}}>
			</li>
			<input type="submit" id="editSubmit" value = "Change">
		</ul>
	</fieldset>
</form>
 <script src="edit.js"></script>